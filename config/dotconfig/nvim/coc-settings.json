// vim: ft=jsonc
{
    /* */
    "coc.source.around.enable": false,
    "coc.source.buffer.enable": false,
    "codeLens.enable": true,
    "workspace.workspaceFolderCheckCwd": true,
    "workspace.bottomUpFiletypes": [],
    "python.formatting.provider": "black",
    "coc.preferences.formatOnSaveFiletypes": ["python"],
    "python.analysis.diagnosticMode": "workspace",
    "python.linting.mypyEnabled": false,
    "python.linting.mypyArgs": ["--ignore-missing-imports","--follow-imports=silent","--show-column-numbers"],
    "python.linting.pylintEnabled": true,
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                ".hie-bios",
                "stack.yaml",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": [
                "hs",
                "lhs",
                "haskell"
            ],
            "initializationOptions": {
                "haskell": {
                }
            }
        },
        "robotframework_ls": {
            "command": "robotframework_ls",
            "filetypes": ["robot"],
            "settings": {
                "robot.completions.keywords.format": "Title Case"
            }
        },
        "terraform": {
            "command": "terraform-ls",
            "args": ["serve"],
            "filetypes": [
                "terraform",
                "tf"
            ],
            "initializationOptions": {},
            "settings": {}
        }
    },
    "svelte.enable-ts-plugin": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/19.1.2/clangd_19.1.2/bin/clangd",
    "snippets.ultisnips.pythonPrompt": false,
    "pyright.inlayHints.parameterTypes": false,
    "pyright.inlayHints.variableTypes": true,
    "sumneko-lua.enableNvimLuaDev": true,
    "Lua.hint.arrayIndex": "Disable",
}
